<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--Users -->
    <changeSet id="001-create-tables-users" author="mnv">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="is_admin" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Training Types -->
    <changeSet id="001-create-tables-training-types" author="mnv">
        <createTable tableName="training_types">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Trainings -->
    <changeSet id="001-create-tables-trainings" author="mnv">
        <createTable tableName="trainings">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="training_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="calories_burned" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="additional_info" type="varchar(255)"/>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="trainings"
            baseColumnNames="user_id"
            referencedTableName="users"
            referencedColumnNames="id"
            constraintName="fk_trainings_users"/>

        <addForeignKeyConstraint
            baseTableName="trainings"
            baseColumnNames="training_type_id"
            referencedTableName="training_types"
            referencedColumnNames="id"
            constraintName="fk_trainings_training_types"/>
    </changeSet>

    <!-- Audit Log -->
    <changeSet id="001-create-tables-audit-log" author="mnv">
        <createTable tableName="audit_log">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="action" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="audit_log"
            baseColumnNames="user_id"
            referencedTableName="users"
            referencedColumnNames="id"
            constraintName="fk_audit_log_users"/>
    </changeSet>
</databaseChangeLog>
